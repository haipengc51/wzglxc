<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_height"
        android:gravity="center"
        android:layout_marginLeft="@dimen/marginTop10"
        android:layout_marginRight="@dimen/marginTop10"
        android:text="@string/loading_update"
        android:textSize="@dimen/title_text_size"
        android:textColor="@color/black"/>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginLeft="@dimen/marginTop10"
        android:layout_marginRight="@dimen/marginTop10"
        android:max="100"
        style="@style/my_webview_progressbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_marginLeft="@dimen/marginTop10"
        android:layout_marginRight="@dimen/marginTop10"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/currentsize"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/currentsize"
            android:textSize="@dimen/content_text_size"
            android:textColor="@color/text_content_color"/>

        <TextView
            android:id="@+id/allsize"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:text="@string/allsize"
            android:textSize="@dimen/content_text_size"
            android:textColor="@color/text_content_color"/>

    </LinearLayout>

</LinearLayout>